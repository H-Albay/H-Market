@using H_Market.Models;
@model IEnumerable<ProductModel>
@{
    ViewBag.Title = "List";
}
<div class="container" pb-5>

    <div class="row mt-3">
        <div class="col-md-3">
       @Html.Action("GetCategories","Home")
        </div>

        <div class="col-md-9">
            @if (Model.Count() == 0)
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-circle"></i> Bu katagoride bir ürün bulunamadı.
                </div>
            }
            else
            {
                <div class="alert alert-success" role="alert">
                    <i class="fas fa-check"></i> <span> <strong>@Model.Count()</strong> adet ürün bulundu.</span> 
                </div>

            }
            <div class="row">
                @Html.Partial("_ProductList", Model)
            </div>
        </div>
    </div>
</div>
