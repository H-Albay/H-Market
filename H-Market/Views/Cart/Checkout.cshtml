@model H_Market.Models.ShippingDetails
@{
    ViewBag.Title = "Checkout";
}
<style>
    .feeld-valition-eror{ color: #f00;}
    .feeld-valition-valid{ display: none;}
    .input-validation-error{ border: 1px solid #ff0000;background-color: #fee;}
    .validation-summary-errors{font-weight: bold;color:#ff0000}
    .validation-summary-valid{ display:none;}

</style>

<div class="container">
    <div class="row">

        <div class="col-md-12">
            <h2 class="text-center">Sipariş Bilgileriniz</h2>
            <hr />
            <p>Lütfen sipariş bilgilerinizi doldurunuz.</p>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <hr />
                <div class="form-group row">
                    <label for="" class="col-sm-2 col-form-label">Ad-Soyad</label>
                    <div class="col-sm-6">
                        <span class="badge-primary">@User.Identity.Name</span> 
                    </div>
                </div>
                <div class="form-group row">
                    <label for="" class="col-sm-2 col-form-label">Adres Başlığı</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.AdresBaslıgı, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="" class="col-sm-2 col-form-label">Adres</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="" class="col-sm-2 col-form-label">Sehir</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="" class="col-sm-2 col-form-label">Semt</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.Semt, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="" class="col-sm-2 col-form-label">Mahalle</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.Mahalle, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="" class="col-sm-2 col-form-label">Posta Kodu</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.PostaKodu, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-6">
                        <button class="btn btn-primary" type="submit">Submit</button>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js">
</script>

