@model IEnumerable<H_Market.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container col-md-10">
    <div class="row">
        <div class="col-md-6">
            <h5>Ürün Listesi</h5>
        </div>
        <div class="col-md-6">
            <p class="float-right">
                @Html.ActionLink("Yeni Ürün", "Create", null, new { @class = "btn btn-primary btn-sm" })

            </p>
        </div>
    </div>
    </div>
<hr />
<div class="container col-md-10">

    <table class="table table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsApproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsHome)
            </th>
            <th style="width:10%;"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/Upload/@item.Image" alt="İmage" width="70" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (item.IsApproved == true)
                    {
                        <label class="badge badge-success"><i class="fas fa-check"></i> Evet</label>

                    }
                    else
                    {
                        <label class="badge badge-danger"><i class="fas fa-times"></i> Hayır</label>

                    }

                </td>
                <td>
                    @if (item.IsHome == true)
                    {
                        <label class="badge badge-success"><i class="fas fa-check"></i> Evet</label>

                    }
                    else
                    {
                        <label class="badge badge-danger"><i class="fas fa-times"></i> Hayır</label>

                    }
                </td>
                <td >
                    @Html.ActionLink("Güncelle", "Edit", new { id = item.Id },new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }

    </table>
</div>

